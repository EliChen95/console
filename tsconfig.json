{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2017",
      "es2015.promise"
    ],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
//    "isolatedModules": false,
    "noEmit": false,
  },
  "include": [
    "src",
    "packages",
    "plugins",
    "server"
  ]
}
